
<!-- Html for student login for course registration -->
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">  
        <meta name="viewport" content="width=device-width, initial-scale=1.0">      

        <title>Course Registration </title>
        <link rel="stylesheet" href="/styles/css/login.css">
        <link rel="icon" href="/styles/images/eportal-logo.png">

    </head>
    <body>        

        <header>
            <a href="/">
            <h1> Course Registration </h1> 
              
            </a>

        </header> 
        <h2 id=""> Log in</h2>

       <section class="login-section">
          <form id= 'login-form'  method ='post' action="/access/log-in?_csrf=<%= csrfToken %>" >         
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          
            <input type="username" name= 'username'  placeholder="Email" required autofocus > <br>
            
            <input type="password" name= 'password'  placeholder="Matricno" required autofocus> <br>            
            <button> Log in</button>               
          </form>
          <h6 >   <a href="/access/student-registration "> Create account </a> </h6>
      </section> 

    </body>
</html>


